<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DigiteX | Home</title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&family=Open+Sans:wght@300;400;600;700&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    
    <style>
@import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;700&display=swap');
@font-face {
    font-family: 'digitfont';
    src: url('./digifont.ttf') format('truetype');
}

html {
    background-color: #000000;
    margin: 0;
    padding: 0;
    color: #ffffff;
    font-family: "Be Vietnam Pro", sans-serif;
    font-weight: 100;
    font-size: 1.2em;
    height: 100%;
}

body {
    display: flex;
    height: 100vh;
    margin: 0;
    overflow: hidden;
}

.sidebar {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    min-width: 240px;
    background: linear-gradient(160deg, #181c22 60%, #222831 100%);
    padding: 32px 0 24px 0;
    box-sizing: border-box;
    border-right: 1.5px solid #222b;
    border-radius: 0 30px 30px 0;
    box-shadow: 2px 0 16px 0 #0006;
    gap: 36px;
    flex-shrink: 0;
}

.logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    margin-bottom: 10px;
    cursor: pointer;
}

.logo img {
    height: 60px;
    margin-bottom: 2px;
    filter: drop-shadow(0 2px 8px #0008);
}

.logofont {
    font-family: 'digitfont', sans-serif;
    font-size: 2em;
    color: #fff;
    user-select: none;
    letter-spacing: 2px;
    margin: 0;
    text-shadow: 0 2px 8px #0006;
}

.nav-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
    width: 100%;
    align-items: stretch;
    margin-top: 10px;
}

.nav-link {
    display: flex;
    align-items: center;
    gap: 14px;
    color: #b3e5fc;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.13em;
    padding: 12px 0 12px 32px;
    border-left: 4px solid transparent;
    border-radius: 8px 0 0 8px;
    background: none;
    transition: border-color 0.3s, color 0.3s, background 0.3s;
    box-sizing: border-box;
    position: relative;
}

.nav-link:hover,
.nav-link:focus {
    border-left-color: #28829e;
    color: #fff;
    background: #232b3b;
}

.nav-link.active {
    border-left-color: #28829e;
    color: #fff;
    font-weight: 600;
    background: #232b3b;
}

.nav-link .icon {
    font-size: 1.2em;
    width: 1.5em;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    opacity: 0.85;
}

.main {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 20px;
    box-sizing: border-box;
    overflow: hidden;
    min-width: 0;
}

.header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    flex-shrink: 0;
}

.header-title {
    font-size: 2em;
    margin: 0;
}

.submit-btn {
    padding: 15px 30px;
    background: linear-gradient(135deg, #28a745, #20c997);
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 1em;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    flex-shrink: 0;
}

.submit-btn:hover {
    background: linear-gradient(135deg, #218838, #1ea085);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
}

.submit-btn:active {
    transform: translateY(0);
}

.submit-btn:disabled {
    background: #6c757d;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
}

.details {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
    flex-shrink: 0;
}

#title {
    flex: 2;
    padding: 14px 18px;
    font-size: 1.1em;
    border: 2px solid #3a3f47;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    color: #ffffff;
    font-family: inherit;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

#title:focus {
    outline: none;
    border-color: #28829e;
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 3px rgba(40, 130, 158, 0.2);
}

#title::placeholder {
    color: #888;
    transition: color 0.3s ease;
}

#title:focus::placeholder {
    color: #aaa;
}

#Department {
    flex: 1;
    padding: 14px 18px;
    font-size: 1.1em;
    border: 2px solid #3a3f47;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    color: #ffffff;
    font-family: inherit;
    transition: all 0.3s ease;
    box-sizing: border-box;
    cursor: pointer;
}

#Department:focus {
    outline: none;
    border-color: #28829e;
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 3px rgba(40, 130, 158, 0.2);
}

#Department option {
    background: #1a1d23;
    color: #ffffff;
    padding: 10px;
}

.editor-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 0;
    overflow: hidden;
}

.note-editor.note-frame {
    border-radius: 12px;
    border: 2px solid #3a3f47;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    background: rgba(255, 255, 255, 0.02);
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    height: 100%;
}

.note-toolbar {
    background: linear-gradient(135deg, #2a2f36 0%, #1e2328 100%);
    border-radius: 12px 12px 0 0 !important;
    border: none !important;
    border-bottom: 1px solid #3a3f47 !important;
    padding: 12px 16px;
    flex-shrink: 0;
}

.note-toolbar .note-btn {
    color: #b3e5fc;
    background: transparent;
    border: none !important;
    margin: 0 2px;
    padding: 8px 12px;
    border-radius: 6px;
    transition: all 0.2s ease;
}

.note-toolbar .note-btn:hover,
.note-toolbar .note-btn:focus {
    background: rgba(40, 130, 158, 0.2);
    color: #fff;
}

.note-toolbar .note-btn.active {
    background: #28829e;
    color: #fff;
}

.note-editable {
    flex: 1 !important;
    font-size: 1.1em !important;
    background: rgba(255, 255, 255, 0.03) !important;
    border-radius: 0 0 12px 12px !important;
    padding: 20px !important;
    line-height: 1.6 !important;
    border: none !important;
    color: #ffffff !important;
    overflow-y: auto !important;
    max-height: 100% !important;
    height: auto !important;
    min-height: 300px !important;
    box-sizing: border-box !important;
}

.note-editable:focus {
    background: rgba(255, 255, 255, 0.05) !important;
}

.note-editable blockquote {
    margin: 15px 0;
    padding: 12px 20px;
    border-left: 4px solid #28829e;
    background: rgba(40, 130, 158, 0.1);
    font-style: italic;
    color: #b3e5fc;
    border-radius: 0 8px 8px 0;
}

.note-editable blockquote p {
    margin: 0;
}

.note-editable::-webkit-scrollbar {
    width: 8px;
}

.note-editable::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
}

.note-editable::-webkit-scrollbar-thumb {
    background: #28829e;
    border-radius: 4px;
    transition: background 0.3s ease;
}

.note-editable::-webkit-scrollbar-thumb:hover {
    background: #3a9cb8;
}

.note-editable {
    scrollbar-width: thin;
    scrollbar-color: #28829e rgba(255, 255, 255, 0.1);
}

.status-message {
    margin-top: 15px;
    font-size: 0.95em;
    color: #888;
    min-height: 20px;
    text-align: center;
    flex-shrink: 0;
}

.success {
    color: #28a745;
}

.error {
    color: #dc3545;
}

@media (max-width: 900px) {
    .sidebar { 
        width: 70px; 
        min-width: 60px; 
        padding: 10px 0; 
    }
    .logo img { 
        height: 40px; 
    }
    .logofont { 
        font-size: 1em; 
    }
    .nav-link { 
        font-size: 0.9em; 
        padding: 8px 0 8px 10px; 
        gap: 6px; 
    }
    .nav-link .icon { 
        width: 1em; 
    }
    .header-section {
        flex-direction: column;
        gap: 15px;
        align-items: stretch;
    }
    .details {
        flex-direction: column;
    }
    .header-title {
        font-size: 1.6em;
        text-align: center;
    }
}

@media (max-width: 600px) {
    .main {
        padding: 15px;
    }
    .details {
        gap: 10px;
    }
    #title, #Department {
        padding: 12px 15px;
        font-size: 1em;
    }
}
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo" onclick="location.href='/'">
            <img src="/logo.png" alt="DigiteX Logo">
            <span class="logofont">DigiteX</span>
        </div>
        <nav class="nav-links" role="navigation" aria-label="Primary">
            <a href="authorportal" class="nav-link"><span class="icon">üè†</span>Dashboard</a>
            <a href="New" class="nav-link active"><span class="icon">üìù</span>New Post</a>
        </nav>
    </div>
    
    <div class="main">
        <div class="header-section">
            <h1 class="header-title">New Article +</h1>
            <button class="submit-btn" onclick="submitContent()">üì§ Submit Article</button>
        </div>
        
        <div class="details">
            <input type="text" id="title" placeholder="Article Title">
            <select id="Department" name="Department">
                <option value="" disabled selected>Select Department</option>
                <option value="Artificial Intelligence">Artificial Intelligence</option>
                <option value="Business">Business</option>
                <option value="Medicine">Medicine</option>
            </select>
        </div>

        <div class="editor-container">
            <div id="summernote"></div>
        </div>

        <div id="status" class="status-message"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.js"></script>

    <script>
    $(document).ready(function() {
        $('#summernote').summernote({
            fontNames: ['Arial', 'Roboto', 'Open Sans', 'Lato'],
            fontNamesIgnoreCheck: ['Arial', 'Roboto', 'Open Sans', 'Lato'],
            lineHeights: ['1', '1.2', '1.5', '2', '2.5', '3'],
            height: null, 
            minHeight: null, 
            maxHeight: null, 
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'strikethrough']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['misc', ['undo', 'redo']]
            ],
            fontSizes: ['8', '9', '10', '11', '12', '14', '16', '18', '20', '24', '28', '32', '36', '48'],
            styleTags: [
                'p',
                { title: 'Blockquote', tag: 'blockquote', className: '', value: 'blockquote' },
                'pre', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
            ],
            placeholder: 'Begin Your Article...',
            disableResizeEditor: false
        });
    });

    function submitContent() {
        const submitBtn = document.querySelector('.submit-btn');
        const html = $('#summernote').summernote('code');
        const textContent = html.replace(/<[^>]*>/g, '').trim();
        const title = document.getElementById('title').value.trim();
        const department = document.getElementById('Department').value;
        
        if (!textContent) {
            showStatus('‚ùå Please enter some content for your article.', 'error');
            return;
        }
        
        if (!title) {
            showStatus('‚ùå Please enter a title for your article.', 'error');
            return;
        }
        
        if (!department) {
            showStatus('‚ùå Please select a department.', 'error');
            return;
        }
        
        if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '‚è≥ Submitting...';
        }
        
        showStatus('üì§ Submitting your article...', '');
        
        fetch('/submit-article', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                html: html,
                title: title,
                department: department,
                timestamp: new Date().toISOString(),
                wordCount: textContent.split(/\s+/).length
            })
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                throw new Error('Submission failed');
            }
        })
        .then(result => {
            showStatus('‚úÖ Article submitted successfully!', 'success');
            if (result.redirectUrl) {
                setTimeout(() => {
                    window.location.href = result.redirectUrl;
                }, 1500);
            }
        })
        .catch(error => {
            console.error('Submit error:', error);
            showStatus('‚ùå Network error. Please try again.', 'error');
        })
        .finally(() => {
            if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'üì§ Submit Article';
            }
        });
    }

    function showStatus(message, type) {
        const statusEl = document.getElementById('status');
        if (statusEl) {
            statusEl.textContent = message;
            statusEl.className = `status-message ${type}`;
        }
    }

    function extractTitle(html) {
        const tempDiv = document.createElement('div');
        tempDiv.innerHTML = html;
        const h1 = tempDiv.querySelector('h1');
        const h2 = tempDiv.querySelector('h2');
        const firstParagraph = tempDiv.querySelector('p');
        
        if (h1) return h1.textContent;
        if (h2) return h2.textContent;
        if (firstParagraph) {
            const text = firstParagraph.textContent;
            return text.length > 50 ? text.substring(0, 50) + '...' : text;
        }
        return 'Untitled Article';
    }
    </script>
</body>
</html>
